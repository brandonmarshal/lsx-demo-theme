    "content": "<!-- wp:group {\"className\":\"related-content-section\",\"style\":{\"spacing\":{\"padding\":{\"top\":\"var:preset|spacing|70\",\"bottom\":\"var:preset|spacing|70\"},\"blockGap\":\"var:preset|spacing|60\"}},\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group related-content-section\" style=\"padding-top:var(--wp--preset--spacing--70);padding-bottom:var(--wp--preset--spacing--70)\"><!-- wp:heading -->\n<h2 class=\"wp-block-heading\">Gear & Fishing Information</h2>\n<!-- /wp:heading -->\n\n<!-- wp:columns -->\n<div class=\"wp-block-columns\"><!-- wp:column -->\n<div class=\"wp-block-column\"><!-- wp:heading {\"level\":3} -->\n<h3 class=\"wp-block-heading\">Recommended Gear</h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph -->\n<p>Essential equipment for targeting this species effectively.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:query {\"queryId\":40,\"query\":{\"perPage\":3,\"postType\":\"gear\",\"order\":\"desc\",\"orderBy\":\"date\"},\"className\":\"gear-recommendations-list\"} -->\n<div class=\"wp-block-query gear-recommendations-list\"><!-- wp:post-template {\"layout\":{\"type\":\"default\"}} -->\n<!-- wp:fishing/gear-card /-->\n<!-- /wp:post-template -->\n\n<!-- wp:query-no-results -->\n<!-- wp:paragraph -->\n<p>No gear recommendations yet. Check back soon!</p>\n<!-- /wp:paragraph -->\n<!-- /wp:query-no-results --></div>\n<!-- /wp:query --></div>\n<!-- /wp:column -->\n\n<!-- wp:column -->\n<div class=\"wp-block-column\"><!-- wp:heading {\"level\":3} -->\n<h3 class=\"wp-block-heading\">Fishing Techniques</h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph -->\n<p>Learn effective techniques for catching this species in various conditions.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:list -->\n<ul class=\"wp-block-list\"><!-- wp:list-item -->\n<li><strong>Spring:</strong> Focus on shallow waters near spawning areas</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><strong>Summer:</strong> Target deeper, cooler water structures</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><strong>Fall:</strong> Fish feeding aggressively before winter</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><strong>Winter:</strong> Slow presentation in deep holes</li>\n<!-- /wp:list-item --></ul>\n<!-- /wp:list -->\n\n<!-- wp:separator {\"className\":\"is-style-wide\"} -->\n<hr class=\"wp-block-separator has-alpha-channel-opacity is-style-wide\"/>\n<!-- /wp:separator -->\n\n<!-- wp:heading {\"level\":4} -->\n<h4 class=\"wp-block-heading\">Best Fishing Areas</h4>\n<!-- /wp:heading -->\n\n<!-- wp:query {\"queryId\":41,\"query\":{\"perPage\":5,\"postType\":\"area\",\"order\":\"desc\",\"orderBy\":\"date\"},\"className\":\"area-suggestions-list\"} -->\n<div class=\"wp-block-query area-suggestions-list\"><!-- wp:post-template {\"layout\":{\"type\":\"default\"}} -->\n<!-- wp:group {\"tagName\":\"article\",\"style\":{\"spacing\":{\"blockGap\":\"var:preset|spacing|20\"}},\"layout\":{\"type\":\"constrained\"}} -->\n<article class=\"wp-block-group\"><!-- wp:post-title {\"level\":5,\"isLink\":true} /-->\n\n<!-- wp:post-excerpt {\"excerptLength\":20} /--></article>\n<!-- /wp:group -->\n<!-- /wp:post-template -->\n\n<!-- wp:query-no-results -->\n<!-- wp:paragraph -->\n<p>No fishing areas listed yet.</p>\n<!-- /wp:paragraph -->\n<!-- /wp:query-no-results --></div>\n<!-- /wp:query --></div>\n<!-- /wp:column --></div>\n<!-- /wp:columns --></div>\n<!-- /wp:group -->"
